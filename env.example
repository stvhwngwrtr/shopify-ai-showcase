# Shopify API Configuration
# Copy this file to .env and update with your actual values

# Your Shopify shop name (without .myshopify.com)
SHOPIFY_SHOP_NAME=your_shop_name

# Your Shopify access token
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token

# Optional: API version (defaults to 2023-10)
SHOPIFY_API_VERSION=2023-10

# Adobe Firefly API Credentials
# Get these from https://developer.adobe.com/console/home
FIREFLY_CLIENT_ID=your_firefly_client_id
FIREFLY_CLIENT_SECRET=your_firefly_client_secret

# Flask Configuration
DEBUG=False
PORT=8080
